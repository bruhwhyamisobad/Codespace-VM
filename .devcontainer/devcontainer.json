{
  "name": "Webtop Ubuntu KDE",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
  "remoteUser": "vscode",
  "features": {
    "docker-in-docker": "latest"
  },
  "mounts": [
    "source=/home/vscode/webtop-config,target=/config,type=bind"
  ],
  "postStartCommand": "bash -c 'chmod +x ${containerWorkspaceFolder}/.devcontainer/start-webtop.sh && ${containerWorkspaceFolder}/.devcontainer/start-webtop.sh'",
  "forwardPorts": [3000, 3001],
  "portsAttributes": {
    "3000": { "label": "Webtop HTTP", "onAutoForward": "openPreview" },
    "3001": { "label": "Webtop HTTPS", "onAutoForward": "openPreview" }
  }
}

{
    "name": "Webtop Codespace",
    "image": "lscr.io/linuxserver/webtop:ubuntu-kde",
    "remoteUser": "user",
    "forwardPorts": [3000, 3001],
    "mounts": [
        "source=${localWorkspaceFolder}/webtop-home,target=/config,type=bind"
    ],
    "containerEnv": {
        "PUID": "1000",
        "PGID": "1000",
        "TZ": "America/Los_Angeles",
        "PASSWORD": ""
    },
    "postCreateCommand": "echo 'Webtop container is ready!'",
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    }
}

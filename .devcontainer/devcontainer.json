{
  "name": "Webtop Codespace (Secure)",
  "image": "lscr.io/linuxserver/webtop:ubuntu-kde",
  "remoteUser": "abc",
  "mounts": [
    "source=${localWorkspaceFolder}/webtop-home,target=/config,type=bind"
  ],
  "forwardPorts": [3000, 3001],
  "containerEnv": {
    "DEBIAN_FRONTEND": "noninteractive",
    "TZ": "America/Los_Angeles",
    "PUID": "1000",
    "PGID": "1000",
    "CUSTOM_USER": "${{ secrets.WEBTOP_USER }}",
    "PASSWORD": "${{ secrets.WEBTOP_PASS }}"
  },
  "runArgs": [
    "--shm-size=1gb",
    "--security-opt=no-new-privileges"
  ],
  "postStartCommand": "echo 'Webtop container is ready!'"
}